<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/rl_home"
        style="@style/ButtomBar"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_home"
        style="@style/ButtomBarImgBtn"
        android:src="@drawable/main_home"
        android:clickable="false"
        android:focusable="false"/>
        <TextView
            android:id="@+id/tv_integral_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1024" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_gift"
        style="@style/ButtomBar">
        <ImageView
            android:id="@+id/iv_gift"
            style="@style/ButtomBarImgBtn"
            android:src="@drawable/main_school"
            android:clickable="false"
            android:focusable="false"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_user"
        style="@style/ButtomBar">
        <ImageView
            android:id="@+id/iv_user"
            style="@style/ButtomBarImgBtn"
            android:src="@drawable/main_user"
            android:clickable="false"
            android:focusable="false"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/top_icon04"
        android:clickable="false"
        android:focusable="false"
        android:padding="15dp"
        android:layout_gravity="center"/>
</LinearLayout>