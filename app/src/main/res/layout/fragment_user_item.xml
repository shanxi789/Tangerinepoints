<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector">
    <ImageView
        android:id="@+id/iv_integral"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/pic01"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/iv_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_coupon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:text="Redeem at any TangerInePoInts merchant.Please scan the QR code of this coupon on the TangerIne termInal."/>
        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explration Date:01/01/2017"
            android:textSize="10dp"
            android:padding="5dp"
            android:drawableRight="@mipmap/icon01"/>
    </LinearLayout>
</RelativeLayout>