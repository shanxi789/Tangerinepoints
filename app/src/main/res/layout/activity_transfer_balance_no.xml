<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white">
    <include layout="@layout/title_bar" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="@color/gray"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/activity_transfer_balance_userinfo"/>
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/tv_friend_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="10dp"
            android:text="Please enter the amount of points you wish to transter.Your have 11204 points available."/>
        <EditText
            android:id="@+id/edit_friend_integral"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@color/mycolorPrimaryDark"
            android:singleLine="true"
            android:padding="10dp"
            android:inputType="number"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg"
        android:text="Confirm and Transafer"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>