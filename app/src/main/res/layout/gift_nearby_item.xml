<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector">
    <View style="@style/view_gray_white_height_10" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_shopp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/pic04"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shopp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crispy Chiken Sandwich"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                android:id="@+id/tv_pts_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 Pts"
                android:textSize="18sp"
                android:textColor="@color/orange_red"/>
                <TextView
                    android:id="@+id/tv_redeem_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42 redeems"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nick's Cafe"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_shopp_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="351 N Craigs St,Pittsburgh PA 15206"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>